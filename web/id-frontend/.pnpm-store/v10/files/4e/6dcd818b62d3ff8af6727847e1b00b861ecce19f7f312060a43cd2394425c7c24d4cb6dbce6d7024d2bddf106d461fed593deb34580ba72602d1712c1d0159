rops, DOMProps, QAProps {\n    size?: CheckboxSize;\n    content?: React.ReactNode;\n    children?: React.ReactNode;\n    title?: string;\n}\n\nconst b = block('checkbox');\n\nexport const Checkbox = React.forwardRef<HTMLLabelElement, CheckboxProps>(\n    function Checkbox(props, ref) {\n        const {\n            size = 'm',\n            indeterminate,\n            disabled = false,\n            content,\n            children,\n            title,\n            style,\n            className,\n            qa,\n        } = props;\n        const {checked, inputProps} = useCheckbox(props);\n        const text = content || children;\n\n        const control = (\n            <span className={b('indicator')}>\n                <span className={b('icon')} aria-hidden>\n                    {indeterminate ? (\n                        <CheckboxDashIcon className={b('icon-svg', {type: 'dash'})} />\n                    ) : (\n                        <CheckboxTickIcon className={b('icon-svg', {type: 'tick'})} />\n                    )}\n                </span>\n                <input {...inputProps} className={b('control')} />\n                <span className={b('outline')} />\n            </span>\n        );\n\n        return (\n            <ControlLabel\n                ref={ref}\n                title={title}\n                style={style}\n                size={size}\n                disabled={disabled}\n                className={b(\n                    {\n                        size,\n                        disabled,\n                        indeterminate,\n                        checked,\n                    },\n                    className,\n                )}\n                qa={qa}\n                control={control}\n            >\n                {text}\n            </ControlLabel>\n        );\n    },\n);\n"]}