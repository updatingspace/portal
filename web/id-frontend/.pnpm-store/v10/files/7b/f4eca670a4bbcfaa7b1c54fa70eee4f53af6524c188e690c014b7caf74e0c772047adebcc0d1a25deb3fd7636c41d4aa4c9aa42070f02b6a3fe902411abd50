    });
    const handleCommonResize = React.useCallback(() => {
        const overlaySize = getOverlayMaxSize();
        if (overlaySize >= internalSize) {
            return;
        }
        setInternalSize(Math.max(minSize, overlaySize));
        onResize?.(overlaySize);
