import { jsx as _jsx, jsxs as _jsxs } from "react/jsx-runtime";
import { block } from "../utils/cn.js";
import "./Overlay.css";
const b = block('overlay');
export function Overlay({ className, background = 'base', visible = false, children }) {
    return (_jsxs("div", { className: b({ visible }, className), children: [_jsx("div", { className: b('background', { style: background }) }), children && _jsx("div", { className: b('children'), children: children })] }));
}
