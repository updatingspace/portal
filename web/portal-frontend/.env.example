VITE_BFF_BASE_URL=/api/v1
VITE_API_BASE_URL=/api/v1

# Auth initiation must be same-origin via BFF (no direct redirects to id.updspace.com from browser).
# Typical value: /api/v1/auth/login (BFF should redirect user to UpdSpaceID in prod).
VITE_LOGIN_PATH=/api/v1/auth/login

# Optional legacy fallback (discouraged, will not be used when VITE_LOGIN_PATH is set)
VITE_ID_LOGIN_URL=https://id.updspace.com

# Dev-only: enable /dev/auth UI route
VITE_DEV_AUTH_ENABLED=true

# If you run the dev server locally (npm run dev) and want to proxy /api/v1 -> BFF:
VITE_DEV_PROXY_TARGET=http://localhost:8080
VITE_TENANT_HINT=updspace
