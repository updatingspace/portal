{
  "name": "@diplodoc/utils",
  "version": "2.1.0",
  "description": "Diplodoc cross-packages utils",
  "homepage": "https://github.com/diplodoc-platform/utils",
  "bugs": {
    "url": "https://github.com/diplodoc-platform/utils/issues"
  },
  "keywords": [
    "diplodoc",
    "markdown",
    "utils"
  ],
  "types": "./build/esm/common/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/esm/common/index.js",
      "require": "./build/cjs/common/index.js",
      "default": "./build/esm/common/index.js",
      "types": "./build/esm/common/index.d.ts"
    },
    "./react": {
      "import": "./build/esm/react/index.js",
      "require": "./build/cjs/react/index.js",
      "default": "./build/esm/react/index.js",
      "types": "./build/esm/react/index.d.ts"
    }
  },
  "files": [
    "build/"
  ],
  "scripts": {
    "test": "jest --coverage --verbose --silent=false",
    "test:watch": "jest --watch --verbose --silent=false",
    "clean": "rm -rf build",
    "build": "npm run clean && run-p build:*",
    "build:code": "node esbuild/bundle.mjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "prepublishOnly": "npm run build",
    "lint": "lint",
    "lint:fix": "lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky",
    "typecheck": "tsc --noEmit"
  },
  "license": "MIT",
  "devDependencies": {
    "@diplodoc/lint": "^1.2.0",
    "@diplodoc/tsconfig": "^1.0.2",
    "@es-exec/api": "0.0.5",
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@types/jest": "^27.5.2",
    "@types/markdown-it": "^13.0.9",
    "@types/node": "^17.0.35",
    "@types/react": "^18.3.5",
    "esbuild": "^0.17.18",
    "esbuild-jest": "^0.5.0",
    "esbuild-node-externals": "^1.7.0",
    "jest": "^28.1.0",
    "markdown-it": "^13.0.2",
    "npm-run-all": "^4.1.5",
    "react": "^18.3.1",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "react": "^16.8.0  || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
