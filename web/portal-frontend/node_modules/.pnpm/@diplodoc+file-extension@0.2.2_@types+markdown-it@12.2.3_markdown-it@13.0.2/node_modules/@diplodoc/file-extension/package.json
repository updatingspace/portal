{
  "name": "@diplodoc/file-extension",
  "version": "0.2.2",
  "description": "Diplodoc platform extension that provides file links in documentation",
  "main": "build/plugin/index.js",
  "types": "build/plugin/index.d.ts",
  "engines": {
    "npm": ">=11.5.1"
  },
  "exports": {
    ".": {
      "types": "./build/plugin/index.d.ts",
      "node": "./build/plugin/index-node.js",
      "default": "./build/plugin/index.js"
    },
    "./runtime": {
      "types": "./build/runtime/index.d.ts",
      "style": "./build/runtime/index.css",
      "default": "./build/runtime/index.js"
    },
    "./runtime/styles": "./build/runtime/index.css",
    "./runtime/styles.css": "./build/runtime/index.css"
  },
  "homepage": "https://diplodoc.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diplodoc-platform/file-extension.git"
  },
  "bugs": {
    "url": "https://github.com/diplodoc-platform/file-extension/issues"
  },
  "author": "",
  "license": "MIT",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:js": "node ./esbuild/build.mjs",
    "build:declarations": "tsc -p tsconfig.publish.json --emitDeclarationOnly --outDir ./build",
    "test": "cd tests && npm ci && npx vitest run --config ../vitest.config.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "lint": "lint update && lint",
    "lint:fix": "lint update && lint fix",
    "pre-commit": "lint update && lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@diplodoc/lint": "^1.9.2",
    "@diplodoc/tsconfig": "^1.0.2",
    "@types/markdown-it": "^13.0.9",
    "@types/node": "^22.19.7",
    "esbuild": "^0.27.2",
    "esbuild-sass-plugin": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@diplodoc/directive": "^0.3.0"
  },
  "peerDependencies": {
    "markdown-it": "^13.0.0"
  }
}
